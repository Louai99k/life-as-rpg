generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model missions {
  id               Int      @id @default(autoincrement())
  name             String
  description      String
  money_reward     Int
  xp_reward        Int
  overall_progress Float?   @default(0)
  is_completed     Boolean? @default(false)
  rank             String?  @db.VarChar(255)
  goals            Json[]
}

model players {
  id         Int      @id @default(autoincrement())
  name       String
  money      Int?     @default(8000)
  lvl_points Int?     @default(5)
  xp         Int?     @default(0)
  ki         Int?     @default(100)
  is_master  Boolean? @default(false)
  lvl        Int?     @default(1)
  skills     Json?    @default("{}")
  magic      Json[]   @default([])
  items      Json[]   @default([])

  @@index([id], map: "idx_id")
}

model skills {
  id             Int    @id @default(autoincrement())
  name           String
  skill_code     String @db.VarChar(255)
  description    String
  lvls_available Int?   @default(4)
}

model magic_categories {
  id            Int    @id @default(autoincrement())
  name          String
  description   String
  category_code String
}

model items {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  item_code     String
  upgradable    Boolean? @default(false)
  upgrade_tree  Json[]   @default([])
  price         Int
  url           String
  related_magic String
}
